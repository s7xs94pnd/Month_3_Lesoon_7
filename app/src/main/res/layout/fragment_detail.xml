<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".cars.DetailFragment">

    <ImageView
        android:id="@+id/imageOfCars"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_goneMarginTop="20dp"
        android:id="@+id/modelOfCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/imageOfCars"
        app:layout_constraintStart_toStartOf="@+id/imageOfCars"
        app:layout_constraintTop_toBottomOf="@+id/imageOfCars"
        tools:text="model"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/costOfCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/modelOfCar"
        app:layout_constraintStart_toStartOf="@+id/modelOfCar"
        app:layout_constraintTop_toBottomOf="@+id/modelOfCar"
        tools:text="cost" />

    <TextView
        android:id="@+id/descOfCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/costOfCar"
        app:layout_constraintStart_toStartOf="@+id/costOfCar"
        app:layout_constraintTop_toBottomOf="@+id/costOfCar"
        tools:text="Desc" />


    <TextView
        android:id="@+id/numb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/descOfCar"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/descOfCar"
        app:layout_constraintTop_toBottomOf="@+id/descOfCar"
        tools:text="numb" />

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/call"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_call_24"
        app:layout_constraintEnd_toEndOf="@+id/numb"
        app:layout_constraintStart_toStartOf="@+id/numb"
        app:layout_constraintTop_toBottomOf="@+id/numb" />

    <ImageView
        android:id="@+id/WA"
        android:src="@drawable/whatsapp_svgrepo_com"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/call"
        app:layout_constraintStart_toStartOf="@+id/call"
        app:layout_constraintTop_toBottomOf="@+id/call" />
</androidx.constraintlayout.widget.ConstraintLayout>